<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:hapticFeedbackEnabled="true"
    tools:context="view.UserSearchFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/battletag_input"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_conner"
            android:hint="닉네임#배틀태그"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="8dp"
            android:scrollHorizontally="false"
            android:textSize="19sp" />

        <Button
            android:id="@+id/find_id"
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/battletag_input"
            android:background="@drawable/btn_conner"
            android:text="btn" />


    </RelativeLayout>

    <TextView
        android:textColor="@color/gold"
        android:lines="2"
        android:textSize="45sp"
        android:text="Over Watch                          경쟁전 검색"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</FrameLayout>
